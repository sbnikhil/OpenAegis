# AWS Configuration
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566  # LocalStack for local dev

# Anthropic
ANTHROPIC_API_KEY=your_key_here

# Environment
ENVIRONMENT=development  # development or production

# Security (DO NOT DISABLE IN PRODUCTION)
ENABLE_DOCKER_SANDBOX=true
ENABLE_CODE_ANALYZER=true
ENABLE_OUTPUT_SANITIZER=true
ENABLE_GUARDRAILS=true

# Human Approval Settings
# APPROVAL_THRESHOLD determines what operations require human approval:
#   LOW - Approve everything (maximum security, minimal autonomy)
#   MEDIUM - Approve most operations (balanced)
#   HIGH - Approve only dangerous operations like rm, sudo (recommended for autonomous operation)
#   CRITICAL - Approve only extremely destructive operations (maximum autonomy)
APPROVAL_THRESHOLD=HIGH

# Computer Use (Desktop Automation - disabled by default)
ENABLE_COMPUTER_USE=false
COMPUTER_USE_ACTION_DELAY=0.1
COMPUTER_USE_FAILSAFE=true

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true

# Agent Configuration
MAX_TOKENS=4096
TEMPERATURE=0.7